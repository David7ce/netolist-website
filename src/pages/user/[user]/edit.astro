---
import BaseLayout from "../../../layouts/BaseLayout.astro";

const { user } = Astro.params;
// Aquí podrías realizar una consulta para obtener la información del usuario
// Ejemplo: const userInfo = await fetchUser(user);
---
<BaseLayout title={`Editar Perfil de ${user}`}>
  <h1>Editar Perfil de {user}</h1>
  <form id="edit-user-form" action="/api/user/edit" method="POST">
    <!-- Campo oculto para enviar el nombre de usuario -->
    <input type="hidden" name="username" value={user} />

    <label for="name">Nombre:</label>
    <input
      type="text"
      id="name"
      name="name"
      placeholder="Ingresa tu nombre"
      required
    />

    <label for="email">Email:</label>
    <input
      type="email"
      id="email"
      name="email"
      placeholder="Ingresa tu email"
      required
    />

    <!-- Puedes agregar más campos según necesites -->

    <button type="submit">Guardar cambios</button>
  </form>
</BaseLayout>